@model IEnumerable<BasicASPTutorial.Models.Student>;
<!--model IEnumerable<Student>;-->
@{
    ViewData["Title"] = "หน้าแรก";
}
@if(Model.Count()>0)
{
    <!-- แสดงข้อมูลบนเว็บ -->
    <h1 class="text-center">หน้าแรกเว็บไซต์</h1>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>รหัสนักเรียน</th>
                <th>ชื่อนักเรียน</th>
                <th>คะแนนสอบ</th>
                <th>แก้ไข</th>
                <th>ลบ</th>
            </tr>
        </thead>
        <tbody>
            <!-- ดึงข้อมูลออกมาจนกว่าจะหมด จากฐานข้อมูลและนำมาจัดแสดงผล -->
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Score</td>
                    <td><a class="btn btn-warning" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">แก้ไข</a></td>
                    <td><a class="btn btn-danger" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" onclick="return confirm('คุณต้องการลบ @student.Name หรือไม่?')">ลบ</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <div class="alert alert-secondary">ไม่มีข้อมูลนักเรียนในระบบ</div>
}


